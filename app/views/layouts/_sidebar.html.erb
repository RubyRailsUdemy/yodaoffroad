<div class="col-lg-3">
  <div class="well sidebar-nav">
    <% if current_user %>
      <div align="center" class="sidebar-img">
        <%= link_to gravatar_for(current_user), user_path(current_user) %> <br />
      </div>
      <h3 class="page-header">Welcome, <%= current_user.username %></h3>
    <% end %>
    <ul class="nav nav-list">
      <li class="nav-header">Articles</li>
      <li><%= link_to "Articles", articles_path  %></li>
      <% if can? :create, Article %>
        <li><%= link_to "New Article", new_article_path  %></li>
      <% end %>
      <li class="nav-header">Categories</li>
      <li><%= link_to "Categories", categories_path  %></li>
      <% if can? :create, Category %>
        <li><%= link_to "New Category", new_category_path  %></li>
      <% end %>
    </ul>
  </div><!--/.well -->
</div><!--/span-->